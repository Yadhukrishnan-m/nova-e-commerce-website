<script>
function updateCount(count,productId){
  
fetch(`/cart/${count}/${productId}`,{

    
    method: 'get',
            headers: { 'X-Requested-With': 'XMLHttpRequest' }  
})
.then(response=>response.json())
.then(data=>{
    if (data.error) {
        Swal.fire({
        toast: true,
        icon: 'warning',
        title: data.error,
        position: 'top',
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true,
        didOpen: (toast) => {
          toast.addEventListener('mouseenter', Swal.stopTimer);
          toast.addEventListener('mouseleave', Swal.resumeTimer);
        }
      });
    }else{
        document.getElementById(`count-${productId}`).innerText=data.count
        document.getElementById(`subTotal-${productId}`).innerText='₹'+ data.count*data.offerPrice

        document.getElementById(`totalPrice`).innerText='₹'+ data.totalPrice
        document.getElementById(`totalOfferPrice`).innerText='₹'+ data.totalOfferPrice


        document.getElementById('discount').innerText="₹-"+(data.totalPrice-data.totalOfferPrice)

    }
   
})
.catch(error => alert('Error: ' + error.message));
   
}
</script>

