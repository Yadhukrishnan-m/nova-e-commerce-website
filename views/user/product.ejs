<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<style>
    .size-selector {
  display: flex;
  align-items: center;
  gap: 15px;
  margin-top: 15px;
  margin-bottom: 15px;

}

.size-selector input[type="radio"] {
  display: none;
}

.size-selector label {
  cursor: pointer;
  font-size: 13px;
  padding: 5px 10px;
  transition: background-color 0.3s, color 0.3s;
}

.size-selector input[type="radio"]:checked + label {
  background-color: rgb(9, 51, 0);
  color: white;
  border-radius: 10px;
}

.size-selector label:hover {
  background-color: lightgray;
  border-radius: 10px;
}
.product-extra-link2 {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 10px; /* Space between buttons */
}

.product-extra-link2 .button {
    padding: 10px 20px;
    font-size: 14px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    border: none; /* Ensure buttons are consistent */
}

.product-extra-link2 .wishlist-btn {
    width: auto; /* Make sure it fits the content */
    padding: 10px 20px; /* Matching padding to other buttons */
    background-color: #ffffff;
    border-radius: 5px; /* Give it a rounded look similar to buttons */
    color: black; /* Adjust text/icon color */
}
.product-extra-link2 .wishlist-btn i {
    font-size: 18px; /* Adjust icon size if necessary */
}
</style>
<script>
   
    var successMessage = '<%= success %>';
  var errorMessage='<%= error %>'

    if (successMessage) {
      Swal.fire({
        toast: true,
        icon: 'success',
        title: successMessage,
        position: 'top',
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true,
        didOpen: (toast) => {
          toast.addEventListener('mouseenter', Swal.stopTimer);
          toast.addEventListener('mouseleave', Swal.resumeTimer);
        }
      });
    }
    if (errorMessage) {
      Swal.fire({
        toast: true,
        icon: 'warning',
        title: errorMessage,
        position: 'top',
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true,
        didOpen: (toast) => {
          toast.addEventListener('mouseenter', Swal.stopTimer);
          toast.addEventListener('mouseleave', Swal.resumeTimer);
        }
      });
    }

