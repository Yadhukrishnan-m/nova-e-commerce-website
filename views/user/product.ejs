        <script>

            function addToCart(productId){
                const selectedSize = document.querySelector('input[name="size"]:checked');
                const size=selectedSize.value;
  
  fetch(`/addToCart/${productId}/${size}`,{
      method: 'get',
       headers: { 'X-Requested-With': 'XMLHttpRequest' }  
  })
  .then(response=>response.json())
  .then(data=>{
     if (data.error) {
      window.location.href = '/login'
      return
     }
   
      if (!data.exists) {
          Swal.fire({
          toast: true,
          icon: 'success',
          title: data.message,
          position: 'top',
          showConfirmButton: false,
          timer: 3000,
          timerProgressBar: true,
          didOpen: (toast) => {
            toast.addEventListener('mouseenter', Swal.stopTimer);
            toast.addEventListener('mouseleave', Swal.resumeTimer);
          }
        });

        document.getElementById('addToCart').textContent='go to cart'
      }else if(data.exists){
      
       return  window.location.href = `/cart`
      }   
  })
  .catch(error => alert('Error: ' + error.message));
  }




  // for buy now option 
        function buy(productId){
            const selectedSize = document.querySelector('input[name="size"]:checked');
            const size=selectedSize.value;
                window.location.href=`/singleProductCheckout/${productId}/${size}`
        }

        // for wishlist 

   function wishlist(productId){
  
    const selectedSize = document.querySelector('input[name="size"]:checked');
    const size=selectedSize.value; 

    fetch(`/addToWishlist/${productId}/${size}`,{
      method: 'get',
       headers: { 'X-Requested-With': 'XMLHttpRequest' }  
  })
  .then(response=>response.json())
  .then(data=>{
     if (data.status==='notLogedIn') {
        return window.location.href ='/login';
     
     }
     console.log(data.status);
     
   if (data.status=='added') {
    document.getElementById('wishlist').style.backgroundColor = '#10847c';
    Swal.fire({
          toast: true,
          icon: 'success',
          title: 'added to wishlist',
          position: 'top',
          showConfirmButton: false,
          timer: 3000,
          timerProgressBar: true,
          didOpen: (toast) => {
            toast.addEventListener('mouseenter', Swal.stopTimer);
            toast.addEventListener('mouseleave', Swal.resumeTimer);
          }
        });
      
   }else if(data.status=='removed'){
    document.getElementById('wishlist').style.backgroundColor = 'white';
    Swal.fire({
          toast: true,
          icon: 'success',
          title: 'removed from  wishlist',
          position: 'top',
          showConfirmButton: false,
          timer: 3000,
          timerProgressBar: true,
          didOpen: (toast) => {
            toast.addEventListener('mouseenter', Swal.stopTimer);
            toast.addEventListener('mouseleave', Swal.resumeTimer);
          }
        });
   }
     
  })
   }

                                       

  </script>



