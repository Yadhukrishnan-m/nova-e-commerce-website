
<%- include('./header.ejs') %>
<%- include('./sidePannel.ejs') %>   
<main class="main-wrap">


<div class="col-lg-9">
    <section class="content-body p-xl-4">
        <form action="/admin/coupon/editCoupon/<%= coupon._id %>" id="coupon" method="post">
            <% if (errorMsg) { %>
                <h4 style="text-align: center; color: #e74c3c;"><%= errorMsg %></h4>
            <% } %>
            <% if (successMsg) { %>
                <h4 style="text-align: center; color: #2ecc71;"><%= successMsg %></h4>
            <% } %>
        
            <!-- First row: Coupon Code, Discount, and Minimum Order -->
            <div class="row mb-2">
                <div class="col-md-4">
                    <label class="form-label">Coupon Code</label>
                    <input type="text" class="form-control" placeholder="Enter code" name="code" value="<%= coupon.code %>" required>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Discount (%)</label>
                    <input type="number" class="form-control" placeholder="Discount %" name="discount" value="<%= coupon.discount %>" min="0" required>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Minimum Order Value</label>
                    <input type="number" class="form-control" placeholder="Min order" name="minOrder" value="<%= coupon.minOrder %>" min="0" required>
                </div>
            </div>
        
            <!-- Second row: Maximum Discount, Expiry Date, and Limit Per User -->
            <div class="row mb-2">
                <div class="col-md-4">
                    <label class="form-label">Max Discount Amount</label>
                    <input type="number" class="form-control" placeholder="Max discount" value="<%= coupon.maxDiscount %>" name="maxDiscount" min="0" required>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Expiry Date</label>
                    <input type="date" class="form-control" name="expiryDate"   value="<%= coupon.expiryDate ? coupon.expiryDate.toISOString().split('T')[0] : '' %>" required>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Limit Per User</label>
                    <input type="number" class="form-control" placeholder="Limit per user" value="<%= coupon.limitPerUser %>" name="limitPerUser" min="1" required>
                </div>
            </div>
        
            <!-- Third row: Description (75%) and Button (25%) on the same line -->
            <div class="row mb-2 align-items-end">
              
                <div class="col-md-3 text-end">
                    <button class="btn btn-primary" type="submit">UPDATE</button>
                </div>
            </div>
        </form>

    </section> 
</div> 

<div class="card mb-4">
    
</div> 

</main>
 <script src="/admin/js/vendors/jquery-3.6.0.min.js"></script>
 <script src="/admin/js/vendors/bootstrap.bundle.min.js"></script>
 <script src="/admin/js/vendors/select2.min.js"></script>
 <script src="/admin/js/vendors/perfect-scrollbar.js"></script>
 <script src="/admin/js/vendors/jquery.fullscreen.min.js"></script>
 <script src="/admin/js/vendors/chart.js"></script>
 <!-- Main Script -->
 <script src="/admin/js/main.js" type="text/javascript"></script>
 <script src="/admin/js/custom-chart.js" type="text/javascript"></script>

 <script>



 </script>

</body>

</html>