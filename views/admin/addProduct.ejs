
<%- include('./header.ejs') %>
<%- include('./sidePannel.ejs') %>   
<main class="main-wrap">

    <section class="content-main">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">Add New Product</h2>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Basic</h4>
                    </div>
                    <div class="card-body">
                        <!-- Form start -->
                        <form action="/admin/product/addProduct" method="POST" id="productForm" enctype="multipart/form-data" >
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Product title</label>
                                <input type="text" placeholder="Type here" class="form-control" id="productName" name="name">
                                <span id="nameError" class="text-danger"></span>
                            </div>
    
                            <div class="mb-4">
                                <label class="form-label">Full description</label>
                                <textarea placeholder="Type here" class="form-control" rows="4" name="description" id="description"></textarea>
                                <span id="descriptionError" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label"> specification</label>
                                <textarea placeholder="Type here" class="form-control" rows="4" name="specification" id="specification"></textarea>
                                <span id="specificationError" class="text-danger"></span>
                            </div>
    
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">M R P</label>
                                        <input placeholder="â‚¹" type="text" class="form-control" name="mrp" id="mrp">
                                        <span id="mrpError" class="text-danger"></span>
                                    </div>
                                </div>  
    
                                <div class="col-lg-4">
                                    <div class="mb-4">
                                        <label class="form-label">Discount</label>
                                        <input placeholder="%" type="text" class="form-control" id="offerPrice" name="discount">
                                        <span id="offerPriceError" class="text-danger"></span>
                                    </div>
                                </div>
    
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label">Category</label>
                                    <select class="form-select" name="category">
                                        <% categories.forEach(category => { %>
                                            <option value="<%= category._id %>"><%= category.name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
    
                            <!-- <div class="mb-4">
                                <label class="form-label">Stock</label>
                                <input type="text" placeholder="Stock quantity" class="form-control" name="stock" id="stock">
                                <span id="stockError" class="text-danger"></span>
                            </div> -->

                            <div class="mb-4">
            <label class="form-label">Stock Quantity (for Sizes)</label>
            <div class="row">
                <div class="col">
                    <label class="form-label">S</label>
                    <input type="text" placeholder="S" class="form-control" name="stock_s" id="stock_s">
                </div>
                <div class="col">
                    <label class="form-label">M</label>
                    <input type="text" placeholder="M" class="form-control" name="stock_m" id="stock_m">
                </div>
                <div class="col">
                    <label class="form-label">L</label>
                    <input type="text" placeholder="L" class="form-control" name="stock_l" id="stock_l">
                </div>
                <div class="col">
                    <label class="form-label">XL</label>
                    <input type="text" placeholder="XL" class="form-control" name="stock_xl" id="stock_xl">
                </div>
                <div class="col">
                    <label class="form-label">XXL</label>
                    <input type="text" placeholder="XXL" class="form-control" name="stock_xxl" id="stock_xxl">
                </div>
            </div>
            <span id="stockError" class="text-danger"></span>
        </div>

    
                            <div class="mb-4">
                                <label class="form-label">Product Images</label>
                                <div class="input-upload">
                                    <input class="form-control" type="file" name="image" id="productImages" multiple accept="image/*">
                                    <span id="imageError" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- croppie container -->
                            <div id="croppieContainer"></div>
                            <img src="" alt="croppedImage" id="croppedImage" style="display:none;"><br>

                                        
                            <!-- Submit button -->
                            <div class="mb-4">
                                <button type="submit" class="btn btn-primary">Submit Product</button>
                            </div>
                        </form>
                        <!-- Form end -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    
  
</main>

 <script src="/admin/js/vendors/jquery-3.6.0.min.js"></script>
 <script src="/admin/js/vendors/bootstrap.bundle.min.js"></script>
 <script src="/admin/js/vendors/select2.min.js"></script>
 <script src="/admin/js/vendors/perfect-scrollbar.js"></script>
 <script src="/admin/js/vendors/jquery.fullscreen.min.js"></script>
 <script src="/admin/js/vendors/chart.js"></script>
 <!-- Main Script -->
 <script src="/admin/js/main.js" type="text/javascript"></script>
 <script src="/admin/js/custom-chart.js" type="text/javascript"></script>

<script src="/admin/js/addProductCroppie.js"></script>

</body>

</html>