
<%- include('./header.ejs') %>
<%- include('./sidePannel.ejs') %>   
<main class="main-wrap">


<div class="col-lg-9">
    <section class="content-body p-xl-4">
        <form action="/admin/category/edit/<%=category._id  %>" method="post">
            <% if (errorMsg) { %>
                <h4 style="text-align: center; color: #e74c3c;"><%=   errorMsg   %></h4>
            <% } %>
            <% if (successMsg) { %>
                <h4 style="text-align: center; color: #2ecc71;"><%= successMsg %></h4>
            <% } %>
            <div class="row mb-4">
                <label class="col-lg-3 col-form-label">category name</label>
                <div class="col-lg-9">
                    <input type="text" class="form-control" placeholder="Type here" name="categoryName"  value="<%=category.name  %>" required>
                </div>
            </div>
            <div class="row mb-4">
                <label class="col-lg-3 col-form-label">Description*</label>
                <div class="col-lg-9">
                    <textarea class="form-control" placeholder="Type here" rows="4" name="description" required  > <%=category.description  %></textarea>
                </div> 
            </div>  
           
            <button class="btn btn-primary" type="submit"> update Catgeory</button>
        </form>
    </section> 
</div> 



</main>
 <script src="/admin/js/vendors/jquery-3.6.0.min.js"></script>
 <script src="/admin/js/vendors/bootstrap.bundle.min.js"></script>
 <script src="/admin/js/vendors/select2.min.js"></script>
 <script src="/admin/js/vendors/perfect-scrollbar.js"></script>
 <script src="/admin/js/vendors/jquery.fullscreen.min.js"></script>
 <script src="/admin/js/vendors/chart.js"></script>
 <!-- Main Script -->
 <script src="/admin/js/main.js" type="text/javascript"></script>
 <script src="/admin/js/custom-chart.js" type="text/javascript"></script>

</body>

</html>